{
  "name": "pdok-locatieserver",
  "version": "1.0.2",
  "description": "",
  "keywords": [
    "pdok",
    "locatieserver",
    "locationserver",
    "address lookup",
    "adres zoeken"
  ],
  "homepage": "https://github.com/dontwan/pdok-locatieserver#readme",
  "bugs": {
    "url": "https://github.com/dontwan/pdok-locatieserver/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dontwan/pdok-locatieserver.git"
  },
  "license": "MIT",
  "author": "Toby Nijboer",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsc --module commonjs --outDir dist --target es2015 && node -e \"const fs = require('fs'); fs.renameSync('dist/index.js', 'dist/index.cjs')\"",
    "build:esm": "tsc --module esnext --outDir dist --target es2015",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "clean": "node -e \"const fs = require('fs'); try { fs.rmSync('dist', { recursive: true, force: true }); } catch {}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build",
    "release": "standard-version && git push --follow-tags && npm publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.7"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "pnpm@10.17.0",
  "publishConfig": {
    "access": "public"
  }
}
